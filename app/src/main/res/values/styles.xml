<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.DayNight.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="android:windowContentTransitions">true</item>
        <item name="android:actionButtonStyle">@style/ActionButtonStyle</item>
    </style>

    <style name="AppCompatAlertDialogStyle" parent="Theme.AppCompat.Light.Dialog.Alert">
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="AppTheme.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar"/>

    <style name="AppTheme.PopupOverlay" parent="ThemeOverlay.AppCompat.Light"/>

    <style name="ActionButtonStyle" parent="@android:style/Widget.Holo.Light.ActionButton">
        <item name="android:minWidth">0dip</item>
        <item name="android:paddingStart">8dip</item>
        <item name="android:paddingEnd">8dip</item>
        <!--<item name="android:fontFamily">@font/faktpro_normal</item>-->
    </style>
    <style name="SwitchTheme" parent="Theme.AppCompat.Light">
        <item name="colorControlActivated">@color/colorASPrimary</item>
        <item name="android:colorForeground">@color/textColorGray</item>
    </style>

    <style name="Activity.Fullscreen.Theme" parent="AppTheme">
        <item name="android:windowTranslucentStatus">true</item>
        <item name="android:windowTranslucentNavigation">true</item>
    </style>
    <style name="ToolbarTheme" parent="@style/ThemeOverlay.AppCompat.ActionBar">
        <!-- Customize color of navigation drawer icon and back arrow -->
        <item name="colorControlNormal">@color/white</item>
    </style>

    <style name="ToolbarTitleStyle">
        <item name="android:textSize">@dimen/_15ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/faktpro_semibold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
    </style>
    <style name="ButtonStyle">
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
        <item name="android:fontFamily">@font/faktpro_semibold</item>
        <item name="android:textAppearance">?android:textAppearanceLarge</item>
        <!--<item name="android:fontFamily">@font/faktpro_semibold</item>-->
    </style>

    <style name="TextInputHint" parent="Theme.AppCompat.Light">
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:fontFamily">@font/faktpro_normal</item>
    </style>

    <style name="EditTextLabel" parent="Theme.AppCompat.Light">
        <item name="android:textSize">@dimen/_13ssp</item>
        <item name="android:fontFamily">@font/faktpro_light</item>
        <item name="android:textColorHint">@color/textColorGray</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="colorControlNormal">@color/textColorGray</item>
        <item name="colorControlActivated">@color/textColorLightBlack</item>
    </style>
    <style name="EditTextStyle" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/faktpro_normal</item>
        <item name="android:paddingStart">@dimen/_15sdp</item>
        <item name="android:paddingEnd">@dimen/_15sdp</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="android:textColorHint">@color/textColorLightBlack</item>
        <item name="colorControlNormal">@color/GrayColor</item>
        <item name="colorControlActivated">@color/textColorLightBlack</item>
        <item name="colorControlHighlight">@color/textColorLightBlack</item>
    </style>

    <style name="TextStyleNormal" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/faktpro_normal</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textColorOffWhite</item>
    </style>
    <style name="TextStyleSemiBold" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/faktpro_semibold</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textColorOffWhite</item>
    </style>
    <style name="TextStyleLight" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/faktpro_light</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textColorOffWhite</item>
    </style>
    <style name="TextStyleMedium" parent="Theme.AppCompat.Light">
        <item name="android:fontFamily">@font/faktpro_medium</item>
        <item name="android:textSize">@dimen/_14ssp</item>
        <item name="android:textColor">@color/textColorOffWhite</item>
    </style>
</resources>

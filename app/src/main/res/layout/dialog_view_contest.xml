<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_25sdp"
              android:layout_gravity="center"
              android:background="@android:color/transparent">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="@dimen/_40sdp"
                android:id="@+id/congratulation_card"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="0dp"
                android:layout_gravity="bottom">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/title"
                        style="@style/TextStyleNormal"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:paddingLeft="@dimen/_10sdp"
                        android:gravity="center"
                        android:text="@string/invite_message"
                />
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        style="@style/TextStyleNormal"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:text="@string/dare"
                />

                <androidx.cardview.widget.CardView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_6sdp"
                        android:elevation="@dimen/_2sdp"
                        app:cardCornerRadius="@dimen/_2sdp"
                        android:layout_marginRight="@dimen/_6sdp">
                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical">
                        <LinearLayout android:layout_width="match_parent"
                                      android:layout_height="wrap_content"
                                      android:orientation="horizontal"
                                      android:layout_gravity="center"
                                      android:padding="@dimen/_5sdp"
                                      android:gravity="center"
                        >

                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_width="@dimen/_25sdp"
                                    android:layout_height="@dimen/_25sdp"
                                    android:src="@mipmap/user"/>

                            <LinearLayout android:layout_width="0dp"
                                          android:layout_height="wrap_content"
                                          android:layout_weight="1"
                                          android:layout_marginLeft="@dimen/_5sdp"
                                          android:orientation="vertical">
                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/TextStyleSemiBold"
                                        android:textSize="@dimen/_12ssp"
                                        android:textColor="@color/black"
                                        android:text="Hot Contest"

                                />
                                <TextView
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        style="@style/TextStyleNormal"
                                        android:textSize="@dimen/_12ssp"
                                        android:textColor="@color/textColorGray"
                                        android:text="One Day Contest"

                                />
                                <LinearLayout android:layout_width="match_parent"
                                              android:layout_height="wrap_content"
                                              android:layout_gravity="center"
                                              android:orientation="horizontal">
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/TextStyleNormal"
                                            android:textSize="@dimen/_10ssp"
                                            android:textColor="@color/textColorLightBlack"
                                            android:text="Total Winnings"

                                    />
                                    <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            style="@style/TextStyleSemiBold"
                                            android:textSize="@dimen/_13ssp"
                                            android:layout_marginLeft="@dimen/_5sdp"
                                            android:textColor="@color/green"
                                            android:text="$100000"

                                    />
                                </LinearLayout>


                            </LinearLayout>
                            <LinearLayout
                                    android:layout_width="@dimen/_55sdp"
                                    android:layout_height="@dimen/_55sdp"
                                    android:background="@mipmap/circlebg"
                                    android:gravity="center"
                                    android:weightSum="1"
                                    android:orientation="vertical">
                                <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextStyleNormal"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:id="@+id/entry_fee"
                                        android:layout_weight=".5"
                                        android:textSize="@dimen/_8sdp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_height="0dp"
                                        android:text="$50"
                                        android:textStyle="bold"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextStyleNormal"
                                        android:textSize="@dimen/_8ssp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:paddingTop="@dimen/_2sdp"
                                        android:layout_height="wrap_content"
                                        android:text="@string/entry_fee"/>
                            </LinearLayout>

                        </LinearLayout>

                        <LinearLayout
                                android:layout_width="match_parent"
                                android:layout_height="@dimen/_28sdp"
                                android:weightSum="2"
                                android:padding="@dimen/_5sdp"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:background="@mipmap/bgcontest_back"
                                android:layout_marginTop="@dimen/_5sdp">


                            <LinearLayout
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal">
                                <androidx.appcompat.widget.AppCompatImageButton
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@mipmap/time_"
                                        android:background="@null"/>

                                <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextStyleNormal"
                                        android:textSize="@dimen/_10ssp"
                                        android:id="@+id/tvTime"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content"
                                        android:text="25 Feb 05:00 PM"
                                        android:layout_marginLeft="@dimen/_5sdp"
                                        android:layout_gravity="center"/>


                            </LinearLayout>
                            <LinearLayout
                                    android:id="@+id/llWinners"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content"
                                    android:orientation="horizontal"
                                    android:layout_marginRight="@dimen/_3sdp"
                                    android:gravity="right">
                                <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextStyleNormal"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="@dimen/_10sdp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content"
                                        android:text="@string/winners"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        style="@style/TextStyleNormal"
                                        android:layout_gravity="center"
                                        android:gravity="center"
                                        android:textSize="@dimen/_12ssp"
                                        android:layout_width="wrap_content"
                                        android:textColor="@color/white"
                                        android:layout_height="wrap_content"
                                        android:text="350000"
                                        android:id="@+id/tvWinnersTotal"
                                        android:layout_marginLeft="@dimen/_5sdp"/>
                                <androidx.appcompat.widget.AppCompatImageButton
                                        android:layout_width="@dimen/_15sdp"
                                        android:layout_height="@dimen/_15sdp"
                                        android:src="@mipmap/dropdown"
                                        android:visibility="gone"
                                        android:background="@null"
                                        android:layout_marginLeft="@dimen/_5sdp"/>


                            </LinearLayout>


                        </LinearLayout>
                    </LinearLayout>

                </androidx.cardview.widget.CardView>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_20sdp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:text="View contest"
                            android:textAllCaps="true"
                            android:gravity="center"
                            style="@style/TextStyleNormal"
                            android:background="#46AFE6"
                            android:padding="@dimen/_10sdp"
                            android:id="@+id/tvViewContest"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            style="@style/TextStyleNormal"
                            android:textSize="@dimen/_12ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:text="hide"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:background="#005881"
                            android:id="@+id/tv_hide"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="@dimen/_70sdp"
                android:layout_height="@dimen/_70sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circular_tick"
                android:layout_gravity="center_horizontal|top">
            <de.hdodenhof.circleimageview.CircleImageView
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_margin="@dimen/_3sdp"
                    android:src="@mipmap/user"
            />

        </LinearLayout>
    </FrameLayout>
</LinearLayout>
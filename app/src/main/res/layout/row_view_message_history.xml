<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:background="@color/white"
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_marginTop="1dp"
        android:padding="@dimen/_10sdp">
    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyleLight"
            android:id="@+id/txt_title"
            android:padding="@dimen/_2sdp"
            android:textSize="@dimen/_11ssp"
            android:layout_width="wrap_content"
            android:textColor="@color/GrayColor"
            android:text="Lorem Ipsum is simply dummy  sddfafasf  fsdfs  sddfafasf sffSDF  FSFASDFASFAFAFAFF"
            android:layout_height="match_parent"
            android:maxLines="2"/>
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginTop="@dimen/_2sdp">
        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:background="@null"
                app:srcCompat="@mipmap/timegrey"
                android:scaleType="fitCenter"
                android:layout_marginRight="@dimen/_5sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyleNormal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/textColorLightBlack"
                android:text="25 FEB 05:00 PM"
                android:textSize="@dimen/_12ssp"
                android:layout_gravity="center"/>
    </LinearLayout>

</LinearLayout>

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="wrap_content"
        android:id="@+id/ll_main"
        android:background="#F3F3F3"

android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
    android:orientation="horizontal"
            android:padding="@dimen/_10sdp">

        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
        android:orientation="horizontal">

            <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/profile_pic"
                    android:src="@mipmap/cricketer"
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"/>

            <TextView
                    android:id="@+id/name"
                    style="@style/TextStyleSemiBold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_marginStart="@dimen/_5sdp"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorbutton"
                    android:text="Matangi"/>
        </LinearLayout>

        <TextView
                android:id="@+id/date_time"
                style="@style/TextStyleSemiBold"
                android:textSize="@dimen/_12sdp"
                android:layout_gravity="center_vertical"
                android:layout_width="wrap_content"
                android:layout_marginStart="@dimen/_5sdp"
                android:layout_height="wrap_content"
                android:textColor="@color/colorItemBackgroundDarkGray"
                android:text="1 Day Ago"/>

    </LinearLayout>

    <TextView
            android:id="@+id/message"
            android:paddingStart="@dimen/_10sdp"
            android:paddingEnd="@dimen/_10sdp"
            style="@style/TextStyleSemiBold"
            android:textSize="@dimen/_11sdp"
            android:layout_gravity="center_vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@color/colorItemBackgroundDarkGray"
            android:text="Thanks man, itâ€™s well explained. Just a question, is there a way to show the data by pressing the dots or at least placing some label near them? Thanks"/>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/GrayColor"/>


</LinearLayout>



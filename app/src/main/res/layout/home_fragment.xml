            <!--app:elevationEnabled="true"-->
            <!--app:swipeEnabled="true"-->
            <!--app:swipeDirection="freedom_no_bottom"-->
            <!--/>-->

        </LinearLayout>
        <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/cl_main"
                app:layout_constraintTop_toBottomOf="@+id/rl_banner"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="match_parent"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginEnd="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:visibility="gone"
                android:layout_height="match_parent">

            <LinearLayout
                    android:id="@+id/ll_matchSelector"
                    android:layout_width="match_parent"
                    android:gravity="center_vertical"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:background="@drawable/button_rounded_background"
                    android:layout_height="@dimen/_28sdp"
                    app:layout_constraintLeft_toLeftOf="parent"
                    app:layout_constraintRight_toRightOf="parent"
                    android:visibility="visible"
                    tools:layout_editor_absoluteY="13dp"
                    tools:layout_editor_absoluteX="26dp">
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_Fixtures"
                        style="@style/TextStyleMedium"
                        android:background="@drawable/match_selector"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="0dp"
                        android:textColor="@color/home_color_selector"
                        android:text="@string/fixtures"
                        android:layout_height="match_parent"/>

                <View
                        android:id="@+id/view1"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/white"
                        android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_Live"
                        android:layout_weight="1"
                        style="@style/TextStyleMedium"
                        android:background="@drawable/match_selector"
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="0dp"
                        android:textColor="@color/home_color_selector"
                        android:text="@string/live"
                        android:layout_height="match_parent"/>

                <View
                        android:id="@+id/view2"
                        android:layout_width="@dimen/_1sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:background="@color/white"
                        android:layout_height="match_parent"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/txt_Results"
                        android:layout_weight="1"
                        style="@style/TextStyleMedium"
                        android:background="@drawable/match_selector"
                        android:gravity="center"
                        android:textSize="@dimen/_11sdp"
                        android:layout_width="0dp"
                        android:textColor="@color/home_color_selector"
                        android:text="@string/results"
                        android:layout_height="match_parent"/>

            </LinearLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_title"
                style="@style/TextStyleSemiBold"
                android:gravity="left"
                android:layout_marginStart="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:textSize="@dimen/_14ssp"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/cl_main"
                android:layout_width="match_parent"
                android:textColor="@color/white"
                android:text="@string/enter_contest"
                android:layout_height="wrap_content"
                android:visibility="gone"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:paddingTop="@dimen/_5sdp"
                android:id="@+id/entry_fee"
                style="@style/TextStyleSemiBold"
                android:gravity="right"
                android:textSize="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:textColor="@color/colorBackgroundTermsAndConditions"
                android:text="@string/doller_entry_fee"
                android:visibility="gone"
                android:layout_height="wrap_content"
                tools:layout_editor_absoluteY="239dp"/>
        <LinearLayout
                android:id="@+id/ll_expandable_view"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_marginTop="@dimen/_2sdp"
                app:layout_constraintTop_toBottomOf="@+id/txt_title">

            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_280sdp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/txt_title"
                    android:visibility="gone"
                    android:paddingTop="@dimen/_9sdp"
                    android:id="@+id/viewPager_features"/>

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_features"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    app:tabMaxWidth="@dimen/_50sdp"
                    android:layout_below="@+id/viewPager_Banner"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    app:tabMode="fixed"
                    app:tabPadding="0dp"
                    android:layout_gravity="center"
                    android:layout_marginTop="-5dp"
                    app:tabIndicatorHeight="0dp"
                    android:visibility="gone"/>

            <com.rd.PageIndicatorView
                    android:id="@+id/pageIndicatorView"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:piv_animationType="scale"
                    app:piv_dynamicCount="true"
                    android:layout_gravity="center"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="@color/blue"
                    app:piv_unselectedColor="@color/white"
                    app:piv_viewPager="@id/viewPager"
                    attrs:piv_padding="8dp"
                    android:visibility="gone"
                    attrs:piv_radius="4dp" />

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:gravity="left"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/tranning_contest"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_tranning_contest"
                    android:visibility="gone"/>
            <!--<androidx.recyclerview.widget.RecyclerView
                    android:paddingTop="@dimen/_6sdp"
                    android:id="@+id/recyclerView_tranning_contest"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingStart="@dimen/_6sdp"
                    android:paddingEnd="@dimen/_6sdp"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:fillViewport="true"
                    tools:listitem="@layout/item_match"/>-->

            <androidx.viewpager.widget.ViewPager
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_280sdp"
                    android:visibility="gone"
                    android:paddingTop="@dimen/_9sdp"
                    android:id="@+id/viewPager_training"/>

            <com.google.android.material.tabs.TabLayout
                    android:id="@+id/tab_layout_training"
                    android:layout_width="wrap_content"
                    android:layout_height="@dimen/_10sdp"
                    app:tabMaxWidth="@dimen/_100sdp"
                    android:layout_below="@+id/viewPager_Banner"
                    app:tabBackground="@drawable/tab_selector"
                    app:tabGravity="center"
                    android:layout_marginTop="-5dp"
                    app:tabMode="fixed"
                    android:layout_gravity="center"
                    app:tabIndicatorHeight="0dp"
                    android:visibility="gone"/>


            <com.rd.PageIndicatorView
                    android:id="@+id/pageIndicatorTraining"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:piv_animationType="scale"
                    app:piv_dynamicCount="true"
                    android:layout_gravity="center"
                    app:piv_interactiveAnimation="true"
                    app:piv_selectedColor="@color/blue"
                    app:piv_unselectedColor="@color/white"
                    app:piv_viewPager="@id/viewPager"
                    attrs:piv_padding="8dp"
                    android:visibility="gone"
                    attrs:piv_radius="4dp" />


            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:gravity="left"
                    android:layout_marginStart="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_width="match_parent"
                    android:textColor="@color/white"
                    android:text="@string/latest_new"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_latest_new"
                    android:visibility="gone"/>
            <androidx.recyclerview.widget.RecyclerView
                    android:paddingTop="@dimen/_2sdp"
                    android:id="@+id/recyclerView_latest_new"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:nestedScrollingEnabled="false"
                    android:fillViewport="true"
                    tools:listitem="@layout/item_match"
                    android:layout_marginBottom="@dimen/_10sdp"/>

            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:textSize="@dimen/_14ssp"
                    android:layout_width="wrap_content"
                    android:layout_gravity="right"
                    android:textColor="@color/textColorLightBlack"
                    android:text="  See All  "
                    android:padding="@dimen/_5sdp"
                    android:background="@drawable/white_fill_button"
                    android:layout_height="wrap_content"
                    android:id="@+id/seeall"
                    android:visibility="gone"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:paddingTop="@dimen/_6sdp"
                android:id="@+id/recyclerView_Match"
                android:layout_width="match_parent"
                android:layout_height="748dp"
                android:paddingStart="@dimen/_6sdp"
                android:paddingEnd="@dimen/_6sdp"
                android:visibility="gone"
                android:nestedScrollingEnabled="false"
                android:fillViewport="true"
                tools:listitem="@layout/item_match"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"/>
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_no_category_found"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_30sdp"
                android:visibility="gone"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/txt_title"/>
        <View
                android:layout_width="1dp"
                android:layout_height="2dp"
                android:background="#dfdfdf"
                app:layout_constraintBottom_toTopOf="@+id/recyclerView_Match"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                android:id="@+id/view6"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
    <!--</androidx.constraintlayout.widget.ConstraintLayout>-->

        <LinearLayout
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:id="@+id/rl_banner"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            <com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
                    android:id="@+id/hicvp"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_150sdp"
                    app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
                    app:icvp_scroll_duration="250"
                    app:icvp_medium_scaled="false"
                    android:layout_marginTop="-8dp"
                    android:layout_marginBottom="-8dp"
            />

            <!--<com.gigamole.infinitecycleviewpager.HorizontalInfiniteCycleViewPager
                    android:id="@+id/recyclerView_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_30sdp"
                    app:icvp_interpolator="@android:anim/accelerate_decelerate_interpolator"
                    app:icvp_scroll_duration="250"
                    android:background="@color/white"
                    app:icvp_medium_scaled="false"
            />-->
            <androidx.recyclerview.widget.RecyclerView
                    android:paddingTop="@dimen/_6sdp"
                    android:id="@+id/recyclerView_stock_name"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:background="@color/white"
                    android:nestedScrollingEnabled="false"
                    android:fillViewport="true"
                    tools:listitem="@layout/item_match"
                    android:paddingBottom="@dimen/_5sdp"/>
            <!-- <android.support.v4.view.ViewPager
             android:id="@+id/productImagePager"
             android:layout_width="match_parent"
             android:layout_height="wrap_content" />-->

            <!--<com.rd.PageIndicatorView-->
            <!--android:id="@+id/pageIndicatorView"-->
            <!--android:layout_width="wrap_content"-->
            <!--android:layout_height="wrap_content"-->
            <!--android:layout_alignParentBottom="true"-->
            <!--android:layout_centerHorizontal="true"-->
            <!--android:padding="@dimen/_8sdp"-->
            <!--app:piv_radius="@dimen/_4sdp"-->
            <!--app:piv_selectedColor="@color/colorASPrimary"-->
            <!--app:piv_unselectedColor="@color/button_gray_background" />-->

            <!--<com.yuyakaido.android.cardstackview.CardStackView-->
            <!--android:id="@+id/activity_main_card_stack_view"-->
            <!--android:layout_width="match_parent"-->
            <!--android:layout_height="match_parent"-->
            <!--android:clipToPadding="false"-->
            <!--app:visibleCount="5"-->
            <!--app:swipeThreshold="0.75"-->
            <!--app:translationDiff="12"-->

<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools" android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto"
            xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="@dimen/_6sdp"
            card_view:cardElevation="@dimen/_3sdp"
            card_view:cardUseCompatPadding="true"
            card_view:cardPreventCornerOverlap="false">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <RelativeLayout android:layout_width="0dp"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:layout_weight="1">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:src="@mipmap/bgcontest"
                            android:adjustViewBounds="true"
                            android:layout_marginTop="-1dp"/>

                    <LinearLayout android:layout_width="match_parent"
                                  android:layout_height="wrap_content"
                                  android:gravity="center"
                                  android:layout_marginTop="@dimen/_2sdp"
                                  android:orientation="horizontal">
                        <ImageView android:layout_width="@dimen/_15sdp"
                                   android:layout_height="@dimen/_15sdp"
                                   android:src="@mipmap/hotcontest"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:id="@+id/tvContestType"
                                style="@style/TextStyleNormal"
                                android:textColor="@color/white"
                                android:text="Hot Contest"
                                android:gravity="center"
                                android:textSize="@dimen/_10ssp"
                                android:layout_gravity="center"
                                android:layout_marginLeft="@dimen/_5sdp"
                        />

                    </LinearLayout>


                </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleNormal"
                        android:id="@+id/tvTotalWinnings"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_12sdp"
                        android:layout_width="wrap_content"
                        android:textColor="@color/colorSecondary"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleNormal"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:textSize="@dimen/_10ssp"
                        android:id="@+id/text_totalwin"
                        android:layout_width="wrap_content"
                        android:textColor="@color/textColorGray"
                        android:layout_height="wrap_content"
                        android:text="@string/total_winnings"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:layout_margin="@dimen/_5sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="left">
                    <LinearLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@mipmap/circlebg"
                            android:gravity="center"
                            android:weightSum="1"
                            android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/entry_fee"
                                android:layout_weight=".5"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="0dp"
                                android:text=""
                                android:textStyle="bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_6sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_height="wrap_content"
                                android:text="@string/entry_fee"/>
                    </LinearLayout>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:gravity="center"
                            android:id="@+id/lin_rank"
                            android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/tvRank"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/textColorLightBlack"
                                android:layout_height="wrap_content"
                                android:text=""
                                android:textStyle="bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_10ssp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/textColorLightBlack"
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_height="wrap_content"
                                android:text="@string/rank"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="right">
                    <LinearLayout
                            android:layout_width="@dimen/_50sdp"
                            android:layout_height="@dimen/_50sdp"
                            android:background="@drawable/red_circle"
                            android:gravity="center"
                            android:weightSum="1"
                            android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/_10sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="0dp"
                                android:text="@string/finished"
                                android:id="@+id/tvTimeLeft"
                                android:layout_weight=".5"
                                android:textStyle="bold"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_5sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:id="@+id/tvSprortsLeft"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:layout_height="wrap_content"
                            android:text=""/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:visibility="gone"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorGray"
                            android:layout_height="wrap_content"
                            android:text="@string/spot_left"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/ivStock"
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:src="@mipmap/home_icon"
                            android:background="@null"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_10sdp"
                            android:id="@+id/tvStockName"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:layout_height="wrap_content"
                            android:text="@string/nasdaq"
                            android:layout_marginTop="@dimen/_2sdp"/>
                </LinearLayout>

            </LinearLayout>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:orientation="horizontal">


                <androidx.appcompat.widget.AppCompatTextView
                        android:id="@+id/tvScore"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="@string/scores"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textSize="@dimen/_9ssp"
                        android:layout_gravity="left"
                        android:background="@drawable/green_empty_layout"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:textColor="@color/textColorBlack"
                        android:paddingTop="@dimen/_6sdp"
                        android:paddingBottom="@dimen/_6sdp"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:text="Reject"
                        android:layout_weight="1"
                        android:textSize="@dimen/_9ssp"
                        android:paddingLeft="@dimen/_12sdp"
                        android:paddingRight="@dimen/_12sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/textColorBlack"
                        android:paddingTop="@dimen/_6sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_6sdp"
                        android:gravity="center"
                        android:layout_gravity="right"
                        android:background="@drawable/red_empty_layout"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_5sdp"
                    android:paddingRight="@dimen/_5sdp"
                    android:background="@mipmap/bgcontest_back"
                    android:layout_marginTop="@dimen/_5sdp">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_12sdp"
                                android:layout_height="@dimen/_12sdp"
                                android:src="@mipmap/time_"
                                android:scaleType="fitCenter"
                                android:background="@null"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_9sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"
                                android:text="@string/time"
                                android:layout_marginLeft="@dimen/_5sdp"
                                android:layout_gravity="center"/>
                    </LinearLayout>
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal"
                            android:layout_gravity="right"
                            android:gravity="right"
                            android:layout_marginRight="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_9ssp"
                                android:id="@+id/tvTime"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="wrap_content"
                                android:text=""/>
                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                        android:id="@+id/llWinners"
                        android:layout_width="match_parent"
                        android:weightSum="2"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:padding="@dimen/_5sdp">
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:textSize="@dimen/_9sdp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="@string/winners"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:textSize="@dimen/_11ssp"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text=""
                            android:id="@+id/tvWinnersTotal"
                            android:gravity="right"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg">
    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_back"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:padding="@dimen/_10sdp">
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyleSemiBold"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="@string/friend"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:layout_weight="1.5"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_gravity="center"
        />

        <RelativeLayout
                android:layout_width="0dp"
                android:layout_weight=".5"
                android:gravity="center"
                android:id="@+id/rl_pending"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
        >
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/pending"
                    android:textSize="@dimen/_10ssp"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:id="@+id/tv_add"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:background="@drawable/green_add_button"
                    android:layout_marginLeft="@dimen/_5sdp"
                    android:textAllCaps="true"
                    android:layout_gravity="center"/>

            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="@dimen/_15sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:textSize="@dimen/_8ssp"
                    android:textColor="@color/blue"
                    android:layout_alignParentRight="true"
                    android:text="0"
                    android:gravity="center"
                    android:id="@+id/tv_request_count"
                    android:background="@drawable/white_circle"/>

        </RelativeLayout>
    </LinearLayout>

    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorbutton"
            android:alpha="0.2"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/_35sdp"
            android:orientation="horizontal"
            android:layout_marginRight="@dimen/_10sdp"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp"
            android:background="@drawable/ll_search"
            android:id="@+id/ll_search">
        <EditText
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@null"
                android:layout_marginLeft="@dimen/_12sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:drawablePadding="@dimen/_5sdp"
                android:drawableStart="@mipmap/search"
                android:textSize="@dimen/_11sdp"
                android:imeOptions="actionDone"
                android:drawableTint="@color/white"
                android:hint="@string/search_by_user_name"
                android:textColorHint="@color/white"
                android:textColor="@color/white"
                android:singleLine="true"
                android:id="@+id/et_search"/>
        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_25sdp"
                android:layout_height="@dimen/_25sdp"
                app:srcCompat="@mipmap/search"
                android:layout_gravity="center"
                android:background="@null"
                android:scaleType="fitCenter"
                android:visibility="gone"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_3sdp"
                android:tint="@color/white"/>
    </LinearLayout>

    <com.madapps.liquid.LiquidRefreshLayout
            android:id="@+id/refreshD"
            android:layout_width="match_parent"
            app:AniBackColor="@color/colorPrimary"
            app:AniForeColor="@color/white"
            app:CircleSmaller="6"
            android:layout_height="match_parent">
        <androidx.recyclerview.widget.RecyclerView
                android:id="@+id/recyclerView_friend"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                android:nestedScrollingEnabled="false"
                android:fillViewport="true"
                tools:listitem="@layout/row_view_friends"/>
    </com.madapps.liquid.LiquidRefreshLayout>

</LinearLayout>
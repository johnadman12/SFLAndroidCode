<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingActivity"
        android:background="@mipmap/bg"
        android:orientation="vertical">
    <include
            android:id="@+id/back"
            layout="@layout/include_back"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyleSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/contact_us"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingTop="@dimen/_15sdp"/>
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyleLight"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="We'd love to hear from you"
                android:textColor="@color/white"
                android:textSize="@dimen/_15ssp"
                android:layout_gravity="center"
                android:paddingLeft="@dimen/_12sdp"
                android:paddingRight="@dimen/_12sdp"
                android:paddingTop="@dimen/_10sdp"
                android:paddingBottom="@dimen/_10sdp"
                android:alpha="0.9"/>
        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/colorbutton"
                android:alpha="0.2"/>
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:scrollbars="none">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/_10sdp">
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_user"
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom"
                            android:src="@mipmap/title"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/add_title"
                                android:textColor="@color/white"/>
                        <androidx.appcompat.widget.AppCompatEditText
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ll_search"
                                android:hint="@string/add_title"
                                android:textColor="@color/white"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="@color/white"
                                android:inputType="text"
                                android:singleLine="true"
                                android:imeOptions="actionNext"
                                android:id="@+id/et_old_pass"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom"
                            android:src="@mipmap/username"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/name"
                                android:textColor="@color/white"/>
                        <androidx.appcompat.widget.AppCompatEditText
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ll_search"
                                android:hint="@string/name"
                                android:textColor="@color/white"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="@color/white"
                                android:inputType="text"
                                android:singleLine="true"
                                android:imeOptions="actionNext"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="bottom"
                            android:src="@mipmap/email"
                            android:layout_marginBottom="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/email_address"
                                android:textColor="@color/white"/>
                        <androidx.appcompat.widget.AppCompatEditText
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/ll_search"
                                android:hint="@string/email_address"
                                android:textColor="@color/white"
                                android:padding="@dimen/_10sdp"
                                android:textColorHint="@color/white"
                                android:inputType="text"
                                android:singleLine="true"
                                android:imeOptions="actionNext"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/iv_mobile"
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:layout_gravity="bottom"
                            android:src="@mipmap/mobile"
                            android:layout_marginBottom="@dimen/_5sdp"
                    />
                    <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:paddingLeft="@dimen/_10sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/tv_moblie"
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/mobile_no"
                                android:textColor="@color/white"/>
                        <androidx.appcompat.widget.LinearLayoutCompat
                                android:id="@+id/rl_mobile"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/tv_moblie"
                                android:background="@drawable/ll_search"
                                android:orientation="horizontal">
                            <androidx.appcompat.widget.LinearLayoutCompat
                                    android:layout_width="match_parent"
                                    android:layout_height="wrap_content"
                                    android:gravity="center_vertical">
                                <com.hbb20.CountryCodePicker
                                        android:id="@+id/countryCodeHolder"
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content"
                                        app:ccp_defaultNameCode="US"
                                        app:ccp_textSize="@dimen/_13ssp"
                                        app:ccp_arrowSize="20dp"
                                        android:visibility="visible"
                                        app:ccp_textGravity="RIGHT"
                                        app:ccp_showNameCode="false"
                                        app:ccp_showFlag="true"
                                        android:layout_centerVertical="true"
                                        app:ccpDialog_showFlag="true"
                                        app:ccp_showFullName="false"
                                        app:ccp_clickable="true"
                                        app:ccp_showPhoneCode="true"
                                        app:ccp_contentColor="@color/white"/>
                                <androidx.appcompat.widget.AppCompatEditText
                                        style="@style/EditTextStyle"
                                        android:layout_width="match_parent"
                                        android:layout_height="wrap_content"
                                        android:background="@color/colorTransparent"
                                        android:padding="@dimen/_10sdp"
                                        android:hint="@string/mobile_number"
                                        android:inputType="phone"
                                        android:singleLine="true"
                                        android:imeOptions="actionNext"
                                        android:textColor="@color/white"
                                        android:textColorHint="@color/white"
                                        android:id="@+id/et_number"/>
                            </androidx.appcompat.widget.LinearLayoutCompat>
                        </androidx.appcompat.widget.LinearLayoutCompat>
                    </RelativeLayout>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <androidx.appcompat.widget.LinearLayoutCompat
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:orientation="horizontal"
                        android:weightSum="2">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_35sdp"
                            android:layout_height="@dimen/_35sdp"
                            android:layout_gravity="top"
                            android:src="@mipmap/message"
                            android:layout_marginTop="@dimen/_45sdp"/>
                    <androidx.appcompat.widget.LinearLayoutCompat
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="vertical"
                            android:layout_margin="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:padding="@dimen/_8sdp"
                                android:textSize="@dimen/_12sdp"
                                android:text="@string/message"
                                android:textColor="@color/white"/>
                        <androidx.appcompat.widget.AppCompatEditText
                                style="@style/EditTextStyle"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:background="@drawable/et_bg"
                                android:hint="@string/enter_message"
                                android:gravity="left"
                                android:textColor="@color/white"
                                android:padding="@dimen/_15sdp"
                                android:textColorHint="@color/white"
                                android:inputType="textMultiLine"
                                android:minLines="6"
                                android:maxLines="10"
                                android:imeOptions="actionNext"/>
                    </androidx.appcompat.widget.LinearLayoutCompat>
                </androidx.appcompat.widget.LinearLayoutCompat>
                <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_20sdp"
                        android:padding="@dimen/_10sdp">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tv_submit"
                            style="@style/TextStyleSemiBold"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:background="@drawable/radiuse"
                            android:gravity="center"
                            android:text="@string/submit"
                            android:padding="@dimen/_10sdp"/>
                </RelativeLayout>
            </LinearLayout>
        </ScrollView>
    </LinearLayout>
</LinearLayout>
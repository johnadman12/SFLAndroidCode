<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.support.SupportActivity"
        android:orientation="vertical"
        android:background="@mipmap/bg">

    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_back"/>
    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyleSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/support"
            android:textColor="@color/white"
            android:textSize="@dimen/_15sdp"
            android:padding="@dimen/_10sdp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPitchImageCaption"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="@dimen/_10sdp">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/white_circle">
                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        android:scaleType="fitCenter"
                        app:srcCompat="@mipmap/faq"
                        android:layout_gravity="center"
                        android:background="@null"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/faq"
                        android:padding="@dimen/_5sdp"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/white_circle">
                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:srcCompat="@mipmap/howtoplay_"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:background="@null"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:text="@string/how_to_play"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="2"
            android:layout_margin="@dimen/_10sdp">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center">
            <LinearLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:orientation="vertical"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@drawable/white_circle">
                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:srcCompat="@mipmap/rulesandwinningsupport"
                        android:layout_gravity="center"
                        android:scaleType="fitCenter"
                        android:background="@null"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/rules_winning"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:textAllCaps="true"
                        android:gravity="center"
                        android:padding="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:gravity="center"
                android:layout_height="wrap_content">
            <LinearLayout
                    android:layout_width="@dimen/_105sdp"
                    android:layout_height="@dimen/_105sdp"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:background="@drawable/white_circle">

                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_35sdp"
                        android:layout_height="@dimen/_35sdp"
                        app:srcCompat="@mipmap/contactsupport"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:background="@null"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/contact_support"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.appcompat.widget.LinearLayoutCompat>
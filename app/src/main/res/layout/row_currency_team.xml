<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent" android:layout_height="wrap_content"
        android:id="@+id/ll_main"
        android:layout_marginTop="@dimen/_3sdp"
        android:orientation="vertical">

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/white"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:orientation="horizontal">
        <RelativeLayout
                android:layout_width="@dimen/_38sdp"
                android:layout_height="@dimen/_70sdp"
                android:gravity="top"
                android:padding="@dimen/_3sdp">

            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_15sdp"
                    android:id="@+id/img1"
                    android:scaleType="fitXY"
                    android:layout_centerVertical="true"
                    android:src="@mipmap/cryptoim"/>
            <ImageView
                    android:layout_width="@dimen/_20sdp"
                    android:id="@+id/img2"
                    android:layout_alignParentBottom="true"
                    android:layout_alignParentEnd="true"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:scaleType="fitXY"
                    android:layout_height="@dimen/_15sdp"
                    android:src="@mipmap/stocks"/>

        </RelativeLayout>

        <LinearLayout
                android:id="@+id/ll_stock_detial"
                android:layout_width="0dp"
                android:layout_weight="1"
                android:padding="@dimen/_3sdp"
                android:layout_height="match_parent"
                android:weightSum="1"
                android:orientation="horizontal">

            <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:layout_gravity="center_vertical"
                    android:orientation="vertical">
                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_gravity="top"
                              android:orientation="horizontal">

                    <TextView android:id="@+id/tvSymbol"
                              android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="Apple"
                              android:layout_weight="1"
                              android:textSize="@dimen/_12ssp"
                              style="@style/TextStyleBold"
                              android:textColor="@color/black"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:id="@+id/img_graph"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_15sdp"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:src="@mipmap/downred"/>
                </LinearLayout>

                <LinearLayout android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:layout_marginRight="@dimen/_5sdp"
                              android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_10ssp"
                              android:maxLines="2"
                              android:text="jncjksdncejkcjksdnckjsd"
                              android:id="@+id/tv_change_percentage"
                              style="@style/TextStyleNormal"
                              android:textColor="@color/textColorBlack"/>


                </LinearLayout>


            </LinearLayout>


            <LinearLayout android:layout_width="0dp"
                          android:layout_height="match_parent"
                          android:weightSum="2"
                          android:layout_weight=".5"
                          android:layout_marginStart="@dimen/_3sdp"
                          android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:id="@+id/llPrice"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@drawable/gray_empty_rect"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">

                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_10ssp"
                              android:maxLines="2"
                              android:padding="@dimen/_2sdp"
                              android:gravity="top|center"
                              android:text="Ask :"
                              android:id="@+id/tv_ask"
                              style="@style/TextStyleSemiBold"
                              android:textColor="@color/black"/>

                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_10ssp"
                              android:id="@+id/ask"
                              android:maxLines="2"
                              android:padding="@dimen/_2sdp"
                              android:text="fhkhikhkknckncfnvfkvnfkvfkvk"
                              style="@style/TextStyleSemiBold"
                              android:textColor="@color/black"/>
                </LinearLayout>


                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="0dp"
                        android:gravity="center"
                        android:layout_weight="1"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:id="@+id/llchange"
                        android:background="@drawable/gray_empty_rect"
                        android:layout_gravity="center_vertical"
                        android:orientation="horizontal">
                    <TextView android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_10ssp"
                              android:maxLines="2"
                              android:padding="@dimen/_2sdp"
                              android:gravity="top|center"
                              android:text="Bid :"
                              android:id="@+id/tv_bid"
                              style="@style/TextStyleSemiBold"
                              android:textColor="@color/black"/>
                    <TextView android:layout_width="match_parent"
                              android:layout_height="wrap_content"
                              android:textSize="@dimen/_10ssp"
                              android:id="@+id/bid"
                              android:maxLines="2"
                              android:padding="@dimen/_2sdp"
                              android:text="kvfvnkvnfkjvfnvfjvnvjfv"
                              style="@style/TextStyleSemiBold"
                              android:textColor="@color/black"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="@dimen/_45sdp"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:layout_gravity="center"
                    android:orientation="vertical">


                <ToggleButton
                        android:id="@+id/toggleButton1"
                        android:layout_width="@dimen/_38sdp"
                        android:layout_height="@dimen/_22sdp"
                        android:background="@drawable/bgtoggle"
                        android:button="@null"
                        android:checked="true"
                        android:textOff=""
                        android:textOn=""/>

                <LinearLayout
                        android:layout_width="@dimen/_45sdp"
                        android:layout_height="match_parent"
                        android:layout_marginTop="-5dp">

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="sell"
                              android:layout_weight="1"
                              android:textSize="@dimen/_11ssp"
                              style="@style/TextStyleNormal"
                              android:textColor="@color/textColorGray"
                    />

                    <TextView android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:text="buy"
                              android:gravity="right"
                              android:layout_weight="1"
                              android:textSize="@dimen/_11ssp"
                              style="@style/TextStyleSemiBold"
                              android:textColor="@color/textColorGray"
                    />

                </LinearLayout>

            </LinearLayout>
        </LinearLayout>


        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/img_add"
                style="@style/TextStyleMedium"
                android:layout_gravity="center"
                android:layout_width="@dimen/_40sdp"
                android:textColor="@color/textColorBlack"
                android:src="@mipmap/addsign"
                android:tint="@color/white"
                android:background="@color/green"
                android:layout_height="match_parent"/>


        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/llremoveStock"
                android:clickable="true"
                style="@style/TextStyleMedium"
                android:layout_gravity="center"
                android:visibility="gone"
                android:layout_width="@dimen/_40sdp"
                android:src="@drawable/ic_remove"
                android:background="#FB0418"
                android:layout_height="match_parent"/>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>


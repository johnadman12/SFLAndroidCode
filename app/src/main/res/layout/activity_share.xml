<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:background="@mipmap/bg">
    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_back"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="@dimen/_15sdp"
            android:layout_marginRight="@dimen/_15sdp">
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyleSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/refer_a_friend"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:layout_weight="1"
                android:layout_gravity="center"
                android:paddingTop="@dimen/_15sdp"
                android:paddingBottom="@dimen/_15sdp"/>
    </LinearLayout>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_200sdp"
                    app:srcCompat="@mipmap/referfriend"
                    android:scaleType="fitXY"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:paddingLeft="@dimen/_15sdp"
                    android:paddingRight="@dimen/_15sdp"
                    android:background="@drawable/dashed_border"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:layout_marginBottom="@dimen/_12sdp"
                    android:orientation="vertical">
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleNormal"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_12ssp"
                        android:layout_gravity="center"
                        android:text="@string/tap_to_coppy"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_14ssp"
                        android:text="RETHBD345"
                        android:layout_marginTop="@dimen/_5sdp"/>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textSize="@dimen/_12ssp"
                    android:text="@string/share_unique_code"
                    android:layout_gravity="center"
                    android:gravity="center"/>
            <LinearLayout
                    android:layout_width="@dimen/_85sdp"
                    android:layout_height="@dimen/_85sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:id="@+id/ll_share"
                    android:visibility="visible"
                    android:layout_marginTop="@dimen/_7sdp"
                    android:background="@drawable/white_circle">
                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_30sdp"
                        android:layout_height="wrap_content"
                        app:srcCompat="@mipmap/share"
                        android:scaleType="fitCenter"
                        android:layout_gravity="center"
                        android:clickable="false"
                        android:background="@null"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/share"
                        android:textSize="@dimen/_12sdp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_gravity="center"
                        android:textAllCaps="true"
                        android:layout_marginTop="@dimen/_7sdp"/>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.edit_profile.EditProfileActivity"
        android:background="@mipmap/bg"
        android:orientation="vertical">

    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_back"/>

    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyleSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/edit_profile"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp"
            android:padding="@dimen/_10sdp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPitchImageCaption"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="3">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:id="@+id/ll_profile"
                android:background="@color/colorbutton"
                android:padding="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@mipmap/profileselect"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"
                    android:id="@+id/img_btn_profile"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_profile"/>
        </LinearLayout>
        <View android:layout_width="0.1dp"
              android:layout_height="match_parent"
              android:background="@color/colorBackgroundGray"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white"
                android:padding="@dimen/_5sdp"
                android:id="@+id/ll_contact_info">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@mipmap/contactsupport"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"
                    android:tint="@color/GrayColor"
                    android:id="@+id/img_btn_contact_info"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/contact_info"
                    android:textColor="@color/textColorLightBlack"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_contact_info"/>
        </LinearLayout>

        <View android:layout_width="0.1dp"
              android:layout_height="match_parent"
              android:background="@color/colorBackgroundGray"/>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center"
                android:gravity="center"
                android:background="@color/white"
                android:padding="@dimen/_5sdp"
                android:id="@+id/ll_credentials">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_25sdp"
                    android:layout_height="@dimen/_25sdp"
                    app:srcCompat="@mipmap/credentials"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"
                    android:id="@+id/img_btn_credentials"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="@string/credentials"
                    android:textColor="@color/textColorLightBlack"
                    android:textSize="@dimen/_11sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:id="@+id/tv_crediantals"/>
        </LinearLayout>
    </LinearLayout>
    <FrameLayout
            android:id="@+id/container"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fitsSystemWindows="true"
            android:padding="@dimen/_10sdp"/>
</LinearLayout>
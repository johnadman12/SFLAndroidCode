<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_25sdp"
              android:layout_gravity="center"
              android:background="@android:color/transparent">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="@dimen/_40sdp"
                android:id="@+id/congratulation_card"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="0dp"
                android:layout_gravity="bottom">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/title"
                        style="@style/TextStyleNormal"
                        android:textSize="18sp"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginTop="70dp"
                        android:layout_marginLeft="20dp"
                        android:layout_marginRight="20dp"
                        android:text="@string/account_restricted"
                        android:gravity="center"/>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_30sdp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:text="@string/verify_now"
                            android:gravity="center"
                            style="@style/TextStyleSemiBold"
                            android:background="#31E15A"
                            android:padding="@dimen/_10sdp"
                            android:id="@+id/tv_yes"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            style="@style/TextStyleSemiBold"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:text="@string/remind_me_later"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:background="#005881"
                            android:id="@+id/tv_cancel"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circular_tick"
                android:layout_gravity="center_horizontal|top">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/logout_"
                    android:background="@null"
                    android:padding="@dimen/_5sdp"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="@string/identity_verification"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    style="@style/TextStyleSemiBold"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#005881"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
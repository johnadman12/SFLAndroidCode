<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:background="@mipmap/bg"
                android:layout_height="match_parent">
    <include
            android:id="@+id/tool"
            layout="@layout/include_back"/>
    <androidx.core.widget.NestedScrollView android:layout_width="match_parent"
                                           android:layout_height="match_parent"
                                           android:layout_below="@+id/tool">

        <LinearLayout android:layout_width="match_parent" android:layout_height="wrap_content"
                      android:orientation="vertical">
            <LinearLayout android:layout_width="match_parent"

                          android:layout_height="wrap_content"
                          android:orientation="horizontal"
                          android:weightSum="1"
                          android:layout_marginTop="@dimen/_5sdp"
                          android:padding="@dimen/_2sdp">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:padding="@dimen/_5sdp"
                              android:layout_weight="1"
                              android:layout_marginRight="@dimen/_5sdp"
                              android:layout_marginTop="@dimen/_5sdp"
                              android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="My Team "
                            android:textColor="@color/white"
                            style="@style/TextStyleSemiBold"
                            android:textSize="@dimen/_22ssp"/>

                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:layout_gravity="center"
                            android:padding="@dimen/_5sdp"
                            android:src="@mipmap/editwhite"/>

                </LinearLayout>
                <LinearLayout android:layout_width="wrap_content"
                              android:layout_height="wrap_content"
                              android:padding="@dimen/_5sdp"
                              android:gravity="center"
                              android:layout_gravity="top"
                              android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@mipmap/watchlist_team"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/save_team"
                            android:textSize="@dimen/_10ssp"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/textColorOffWhite"
                            style="@style/TextStyleNormal"

                    />

                </LinearLayout>


                <LinearLayout
                        android:id="@+id/ll_sort"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:padding="@dimen/_5sdp"
                        android:gravity="center"
                        android:layout_gravity="top"
                        android:orientation="vertical">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_width="@dimen/_30sdp"
                            android:layout_height="@dimen/_30sdp"
                            android:src="@mipmap/sort_"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sort"
                            android:textSize="@dimen/_10ssp"
                            android:padding="@dimen/_2sdp"
                            android:textColor="@color/textColorOffWhite"
                            style="@style/TextStyleNormal"

                    />

                </LinearLayout>

            </LinearLayout>

            <View android:layout_width="match_parent" android:layout_height="@dimen/_1ssp"
                  android:background="#39A2D9"/>

            <RelativeLayout android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:padding="@dimen/_10sdp">


                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:background="@drawable/circle"
                        android:layout_alignParentLeft="true"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:tint="#065983"/>

                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:gravity="center"
                        android:layout_alignParentRight="true"
                        style="@style/TextStyleNormal"
                        android:textColor="@color/white"
                        android:textSize="@dimen/_9sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:background="@mipmap/greencircle"
                        android:text="21.00"/>


            </RelativeLayout>

            <androidx.recyclerview.widget.RecyclerView android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">

            </androidx.recyclerview.widget.RecyclerView>



        </LinearLayout>

    </androidx.core.widget.NestedScrollView>
    <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/btn_Next"
            style="@style/ButtonStylelogin"
            android:text="Join with this team"
            android:layout_below="@+id/rel"
            android:textAllCaps="true"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="@dimen/_15sdp"
            android:background="@drawable/green_fill_button"
            android:layout_width="match_parent"
            android:textSize="@dimen/_12ssp"
            android:layout_height="@dimen/_35sdp"/>

</RelativeLayout>
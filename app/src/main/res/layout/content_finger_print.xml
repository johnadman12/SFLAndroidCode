<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@mipmap/bg"
        android:padding="@dimen/_16sdp">

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/logintext"
            style="@style/TextStyleNormal"
            android:textColor="@color/textColorOffWhite"
            android:layout_width="match_parent"
            android:text="FingerPrint"
            android:layout_height="wrap_content"
            android:textAllCaps="true"
            android:padding="@dimen/_3sdp"
            android:layout_marginBottom="@dimen/_30sdp"
            android:textSize="@dimen/_25ssp"/>

    <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/iv_finger_icon"
            android:layout_width="@dimen/_100sdp"
            android:layout_height="@dimen/_100sdp"
            android:src="@drawable/ic_fingerprint"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_gravity="center"/>

    <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/textview"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            style="@style/TextStyleSemiBold"
            android:textColor="@color/white"
            android:maxLines="4"
            android:layout_marginTop="@dimen/_10sdp"
            android:minLines="4"
            android:textSize="@dimen/_14ssp"
            android:text="Place your fingertip on the home button to verify your identity"
            android:gravity="center"
            android:padding="@dimen/_5sdp"
            android:visibility="visible"/>


    <androidx.appcompat.widget.LinearLayoutCompat
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/rl_innerOtp"
            android:gravity="bottom"
            android:layout_weight="1"
            android:orientation="horizontal">

        <View android:layout_width="0dp"
              android:layout_height="wrap_content"
              android:background="@android:color/transparent"
              android:layout_weight=".7"/>
        <androidx.appcompat.widget.AppCompatButton
                style="@style/ButtonStyle"
                android:id="@+id/btn_Skip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:layout_weight=".3"
                android:background="@drawable/blue_fill_button"
                android:gravity="center"
                android:textAllCaps="true"
                android:text="@string/skip"/>


    </androidx.appcompat.widget.LinearLayoutCompat>


</androidx.appcompat.widget.LinearLayoutCompat>
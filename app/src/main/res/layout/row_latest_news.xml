<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ll_main"
        android:orientation="vertical">
    <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/_5sdp">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/white"
                android:orientation="horizontal"
                android:padding="@dimen/_2sdp">
            <androidx.appcompat.widget.AppCompatImageView
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:id="@+id/imageViewNews"
                    android:layout_gravity="center"
                    android:background="@mipmap/logo"/>
            <LinearLayout android:layout_width="match_parent"
                          android:layout_height="wrap_content"
                          android:padding="@dimen/_2sdp"
                          android:layout_marginLeft="@dimen/_2sdp"
                          android:orientation="vertical">
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:weightSum="1"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:id="@+id/tvNewsTitle"
                            android:textSize="@dimen/_10ssp"
                            android:layout_width="0dp"
                            android:textColor="@color/textColorBlack"
                            android:layout_height="wrap_content"
                            android:maxLines="3"
                             android:minLines="2"
                            android:layout_weight="1"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:textSize="@dimen/_10sdp"
                            android:layout_width="@dimen/_45sdp"
                            android:textColor="@color/white"
                            android:layout_height="@dimen/_20sdp"
                            android:id="@+id/tvPercentage"
                            android:background="@drawable/radiuse"
                            android:gravity="center"
                            android:paddingTop="@dimen/_5sdp"
                            android:paddingBottom="@dimen/_5sdp"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleNormal"
                        android:textSize="@dimen/_10ssp"
                        android:id="@+id/tvDescription"
                        android:layout_width="match_parent"
                        android:lineSpacingExtra="@dimen/_1sdp"
                        android:textColor="@color/textColorGray"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_3sdp"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">
                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:layout_marginTop="@dimen/_3sdp"
                            android:layout_marginBottom="@dimen/_5sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:textSize="@dimen/_10sdp"
                                android:id="@+id/tvNewsAuthor"
                                android:layout_width="match_parent"
                                android:textColor="@color/colorPrimary"
                                android:text="CNN News Express "
                                android:layout_height="wrap_content"/>
                    </LinearLayout>

                    <LinearLayout
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:gravity="right"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_15sdp"
                                android:layout_height="@dimen/_15sdp"
                                android:src="@mipmap/timegrey"
                                android:background="@null"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_10ssp"
                                android:id="@+id/tvNewsTime"
                                android:layout_width="wrap_content"
                                android:textColor="@color/textColorLightBlack"
                                android:layout_height="wrap_content"
                                android:text="17 Hour Ago"
                                android:padding="@dimen/_2sdp"
                                android:layout_gravity="center"/>


                    </LinearLayout>


                </LinearLayout>

            </LinearLayout>


        </LinearLayout>
    </androidx.cardview.widget.CardView>


</LinearLayout>



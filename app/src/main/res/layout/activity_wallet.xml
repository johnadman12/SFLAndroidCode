<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingActivity"
        android:background="@mipmap/bg"
        android:orientation="vertical">
    <include
            android:id="@+id/back"
            layout="@layout/include_back"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp">
        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:srcCompat="@mipmap/wallet_w"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:background="@null"
                android:clickable="false"/>
        <androidx.appcompat.widget.AppCompatTextView
                style="@style/TextStyleSemiBold"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/wallet"
                android:textColor="@color/white"
                android:textSize="@dimen/_22ssp"
                android:layout_gravity="center"
                android:layout_marginLeft="@dimen/_10sdp"/>
    </LinearLayout>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorbutton"
            android:alpha="0.2"/>
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:descendantFocusability="blocksDescendants">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:padding="@dimen/_10sdp">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="50dp"
                        android:layout_height="50dp"
                        android:src="@mipmap/ic_launcher_round"
                        app:civ_border_width="0dp"
                        app:civ_border_color="#007FB0"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Steve0308 "
                        android:textSize="@dimen/_13sdp"
                        android:textColor="@color/white"
                        android:id="@+id/tv_username"
                        android:layout_gravity="center"
                        android:layout_marginLeft="@dimen/_10sdp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:paddingLeft="@dimen/_10sdp"
                    android:paddingRight="@dimen/_10sdp"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:gravity="left">
                    <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@mipmap/funds_circle"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/available_funds"
                                android:textSize="@dimen/_9ssp"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$55"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:gravity="right"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="@dimen/_70sdp"
                            android:layout_height="@dimen/_70sdp"
                            android:background="@mipmap/funds_circle"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="@string/currently_used"
                                android:textSize="@dimen/_9ssp"
                                android:textColor="@color/white"
                                android:gravity="center"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="$180"
                                android:textSize="@dimen/_13ssp"
                                android:textColor="@color/white"
                                android:gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:layout_width="@dimen/_230sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/deposit_funds"
                    android:background="@drawable/bg_deposit_fund"
                    android:layout_gravity="center"
                    android:textColor="@color/menu_bg"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"/>
            <View
                    android:layout_width="@dimen/_150sdp"
                    android:layout_height="4dp"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_deposit_fund"
                    android:layout_marginTop="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:layout_width="@dimen/_200sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:text="@string/withdraw_funds"
                    android:background="@drawable/bg_deposit_fund"
                    android:layout_gravity="center"
                    android:textColor="@color/menu_bg"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_5sdp"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleSemiBold"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/history"
                    android:textSize="@dimen/_13ssp"
                    android:textColor="@color/white"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_5sdp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:weightSum="3">
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:textFontWeight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/deposit"
                    android:textColor="@color/white"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:id="@+id/tv_deposit"
                    android:background="@color/history_selector"/>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/GrayColor"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:textFontWeight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/withdrawals"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:id="@+id/tv_withdrawal"
                    android:background="@color/white"/>
            <View android:layout_width="1dp"
                  android:layout_height="match_parent"
                  android:background="@color/GrayColor"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleNormal"
                    android:layout_width="0dp"
                    android:textFontWeight="1"
                    android:layout_height="wrap_content"
                    android:text="@string/transactions"
                    android:textColor="@color/black"
                    android:textSize="@dimen/_11ssp"
                    android:gravity="center"
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:paddingTop="@dimen/_10sdp"
                    android:paddingBottom="@dimen/_10sdp"
                    android:id="@+id/tv_transaction"
                    android:background="@color/white"/>
        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
                android:padding="0.1dp"
                android:id="@+id/recyclerView_wallet"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:visibility="visible"
                tools:listitem="@layout/row_view_history"/>
    </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
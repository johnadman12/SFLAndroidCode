<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="@dimen/_25sdp"
              android:layout_gravity="center"
              android:background="@android:color/transparent">
    <FrameLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:layout_marginTop="@dimen/_40sdp"
                android:id="@+id/congratulation_card"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="0dp"
                android:layout_gravity="bottom">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:background="@color/white">
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:id="@+id/title"
                        style="@style/TextStyleNormal"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@android:color/primary_text_light"
                        android:layout_marginTop="@dimen/_40sdp"
                        android:layout_marginLeft="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:lineSpacingExtra="@dimen/_2sdp"
                        android:text="@string/wizard_message"
                        android:gravity="center"/>

                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:padding="@dimen/_5sdp"
                        android:orientation="horizontal">

                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="note :"
                            style="@style/TextStyleNormal"
                            android:visibility="gone"
                            android:textColor="@color/colorPrimary"
                            android:textSize="@dimen/_11ssp"
                            android:textAllCaps="true"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/tvNote"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/note"
                            style="@style/TextStyleNormal"
                            android:textColor="@color/textColorGray"
                            android:textSize="@dimen/_10ssp"
                    />

                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:weightSum="2"
                        android:layout_marginTop="@dimen/_20sdp">
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            android:textSize="@dimen/_12ssp"
                            android:textColor="@color/white"
                            android:text="Do the magic"
                            android:textAllCaps="true"
                            android:gravity="center"
                            style="@style/TextStyleNormal"
                            android:background="#46AFE6"
                            android:padding="@dimen/_10sdp"
                            android:id="@+id/tvMAgic"/>
                    <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:layout_weight="1"
                            style="@style/TextStyleNormal"
                            android:textSize="@dimen/_12ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:text="@string/cancel"
                            android:gravity="center"
                            android:padding="@dimen/_10sdp"
                            android:background="#005881"
                            android:id="@+id/tv_cancel"/>
                </LinearLayout>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="@dimen/_80sdp"
                android:layout_height="@dimen/_80sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circular_tick"
                android:layout_gravity="center_horizontal|top">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_40sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/wizard"
                    android:background="@null"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Team Wizard"
                    android:gravity="center"
                    android:textSize="@dimen/_12sdp"
                    style="@style/TextStyleSemiBold"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#005881"/>
        </LinearLayout>
    </FrameLayout>
</LinearLayout>
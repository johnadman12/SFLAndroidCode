<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:cardElevation="@dimen/_3sdp"
        card_view:cardPreventCornerOverlap="false"
        card_view:cardUseCompatPadding="true">
    <androidx.constraintlayout.widget.ConstraintLayout android:layout_width="match_parent"
                                                       android:layout_height="wrap_content">


        <androidx.constraintlayout.widget.ConstraintLayout
                xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:card_view="http://schemas.android.com/apk/res-auto"
                android:id="@+id/cl1"
                android:paddingStart="@dimen/_11sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:paddingEnd="@dimen/_11sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:padding="@dimen/_2sdp"
                    tools:ignore="MissingConstraints"
                    card_view:layout_constraintStart_toStartOf="parent"
                    card_view:layout_constraintTop_toTopOf="parent"
                    card_view:layout_constraintBottom_toBottomOf="parent">

                <ImageView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/hotcontest"
                        android:layout_marginTop="@dimen/_10sdp"/>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_weight="1"
                        android:layout_marginStart="@dimen/_5sdp">

                    <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:orientation="horizontal">

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_Title"
                                style="@style/TextStyleSemiBold"
                                android:textSize="@dimen/_11sdp"
                                card_view:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="0dp"
                                android:layout_weight="1"
                                android:textColor="@color/colorBackgroundTermsAndConditions"
                                android:text="Hot Contest"
                                android:layout_height="wrap_content"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintEnd_toEndOf="parent"/>

                        <androidx.appcompat.widget.AppCompatTextView
                                android:id="@+id/txt_Countdown"
                                style="@style/TextStyleSemiBold"
                                android:gravity="center"
                                android:textSize="@dimen/_11sdp"
                                card_view:layout_constraintTop_toTopOf="parent"
                                android:layout_marginTop="@dimen/_5sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/colorSecondary"
                                android:text="Live"
                                android:layout_height="wrap_content"
                                card_view:layout_constraintStart_toStartOf="parent"
                                card_view:layout_constraintEnd_toEndOf="parent"/>

                    </LinearLayout>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_ContestDescription"
                            style="@style/TextStyleNormal"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:text="Get ready for big winning"
                            android:layout_height="wrap_content"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_ContestDay"
                            style="@style/TextStyleSemiBold"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:text="One Day Contest"
                            android:layout_height="wrap_content"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            android:id="@+id/txt_ContestDayTime"
                            style="@style/TextStyleLight"
                            android:gravity="center"
                            android:textSize="@dimen/_11sdp"
                            card_view:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="@dimen/_5sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:text="One Day Contest"
                            android:layout_height="wrap_content"
                            card_view:layout_constraintStart_toStartOf="parent"
                            card_view:layout_constraintEnd_toEndOf="parent"/>

                </LinearLayout>
            </LinearLayout>

        </androidx.constraintlayout.widget.ConstraintLayout>
        <View
                android:id="@+id/view2" android:layout_width="match_parent" android:layout_height="0.5sp"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/cl1"
                android:background="@color/GrayColorOTP"
                card_view:layout_constraintEnd_toEndOf="parent"
        />
        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/txt_contestJoined"
                style="@style/TextStyleNormal"
                android:gravity="start"
                android:textSize="@dimen/_11sdp"
                card_view:layout_constraintTop_toBottomOf="@+id/view2"
                android:layout_width="match_parent"
                android:drawablePadding="@dimen/_15sdp"
                android:paddingStart="@dimen/_15sdp"
                android:paddingTop="@dimen/_5sdp"

                android:paddingEnd="@dimen/_15sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:drawableEnd="@mipmap/arrow_setting"
                android:textColor="@color/colorBackgroundTermsAndConditions"
                android:text="2 Contest Joined"
                android:layout_height="wrap_content"
                card_view:layout_constraintStart_toStartOf="parent"
                card_view:layout_constraintEnd_toEndOf="parent"/>
    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.cardview.widget.CardView>



<?xml version="1.0" encoding="utf-8"?>
<androidx.appcompat.widget.LinearLayoutCompat
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.support.SupportActivity"
        android:orientation="vertical"
        android:background="@mipmap/bg">

    <include
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            layout="@layout/include_back"/>
    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyleSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/social_network"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp"
            android:padding="@dimen/_10sdp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="0.1dp"
            android:background="@color/colorPitchImageCaption"/>


    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:id="@+id/ll_main"
                android:visibility="gone">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_10sdp">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center">


                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/fb_icon"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/img_fb"/>


                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center">


                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/twitter"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/img_twitter"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_10sdp">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center">


                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/youtube"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/img_yt"
                    />


                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center">


                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/instagram"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/img_inst"/>


                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_10sdp">

                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center">


                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/snapchat"
                            android:layout_gravity="center"
                            android:background="@null"
                            android:id="@+id/img_snapcht"/>


                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center">


                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_105sdp"
                            android:layout_height="@dimen/_105sdp"
                            android:scaleType="fitXY"
                            app:srcCompat="@mipmap/website"
                            android:layout_gravity="center"
                            android:background="@null"
                           android:id="@+id/img_website" />
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</androidx.appcompat.widget.LinearLayoutCompat>
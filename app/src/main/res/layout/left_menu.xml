<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android" xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        android:layout_width="294dp"
        android:layout_height="match_parent"
        android:id="@+id/ll_left_menu_parent">
    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="@dimen/_35sdp"
            android:layout_height="@dimen/_35sdp"
            app:srcCompat="@mipmap/cros"
            android:background="@null"
            android:id="@+id/img_btn_close"
            android:layout_marginLeft="@dimen/_10sdp"
            android:layout_marginTop="@dimen/_10sdp"/>
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:paddingLeft="@dimen/_10sdp"
            android:paddingRight="@dimen/_10sdp">
        <androidx.appcompat.widget.AppCompatImageButton
                android:layout_width="@dimen/_35sdp"
                android:layout_height="@dimen/_35sdp"
                app:srcCompat="@mipmap/watchlist"
                android:layout_gravity="center"
                android:scaleType="fitCenter"
                android:background="@null"
                android:layout_marginBottom="@dimen/_10sdp"
                android:layout_marginRight="@dimen/_10sdp"
                android:padding="@dimen/_5sdp"
                android:id="@+id/img_btn_eye"/>
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginRight="@dimen/_10sdp">
            <de.hdodenhof.circleimageview.CircleImageView
                    xmlns:app="http://schemas.android.com/apk/res-auto"
                    android:id="@+id/profile_image"
                    android:layout_width="90dp"
                    android:layout_height="90dp"
                    app:civ_border_width="3dp"
                    app:civ_border_color="#007FB0"/>
            <androidx.appcompat.widget.AppCompatTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Steve0308"
                    android:textStyle="bold"
                    android:textSize="@dimen/_13sdp"
                    android:textColor="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center"
                    android:id="@+id/tv_username"/>
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_gravity="center">
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/level"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white"
                        android:layout_gravity="center"
                        android:id="@+id/tv_level"/>
                <androidx.appcompat.widget.AppCompatTextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="PRO"
                        android:textSize="@dimen/_10ssp"
                        android:textColor="@color/textColorGray"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:background="@drawable/ll_pro"
                        android:paddingTop="@dimen/_5sdp"
                        android:paddingLeft="@dimen/_5sdp"
                        android:paddingRight="@dimen/_5sdp"
                        android:paddingBottom="@dimen/_5sdp"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:id="@+id/tv_pro"/>
            </LinearLayout>
        </LinearLayout>
        <androidx.appcompat.widget.AppCompatImageView
                android:src="@mipmap/lobbyy_"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp"
                android:layout_gravity="center"
                android:layout_marginBottom="@dimen/_10sdp"/>
    </LinearLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:weightSum="4"
            android:background="#007FB0"
            android:layout_marginTop="@dimen/_5sdp">
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:gravity="center"
                      android:id="@+id/ll_wallet">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@mipmap/wallet_"
                    android:background="@null"
                    android:clickable="false"/>
        </LinearLayout>
        <View android:layout_width="0.1dp"
              android:layout_height="match_parent"
              android:background="@color/colorbutton"/>

        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:id="@+id/llMessage"
                      android:layout_height="wrap_content"
                      android:gravity="center">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@mipmap/messages"
                    android:clickable="false"
                    android:background="@null"/>
        </LinearLayout>

        <View android:layout_width="0.1dp"
              android:layout_height="match_parent"
              android:background="@color/colorbutton"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:id="@+id/llContest"
                      android:gravity="center"
                      android:layout_height="wrap_content">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@mipmap/mycontests"
                    android:clickable="false"
                    android:background="@null"
                    android:id="@+id/img_my_contest"/>
        </LinearLayout>
        <View android:layout_width="0.1dp"
              android:layout_height="match_parent"
              android:background="@color/colorbutton"/>
        <LinearLayout android:layout_width="0dp"
                      android:layout_weight="1"
                      android:layout_height="wrap_content"
                      android:id="@+id/ll_Friends">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_35sdp"
                    android:layout_height="@dimen/_35sdp"
                    app:srcCompat="@mipmap/invite_"
                    android:clickable="false"
                    android:background="@null"/>
        </LinearLayout>
    </LinearLayout>
    <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerView_slide_menu"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:visibility="visible"
            android:nestedScrollingEnabled="false"
            android:fillViewport="true"
            tools:listitem="@layout/item_match"
            android:layout_weight="1"/>
    <!-- <androidx.appcompat.widget.AppCompatTextView
             style="@style/TextStyleNormal"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:text="@string/deposit_funds"
             android:layout_gravity="center"
             android:gravity="center"
             android:padding="@dimen/_10sdp"
             android:layout_marginTop="@dimen/_10sdp"
             android:layout_marginLeft="@dimen/_15sdp"
             android:layout_marginRight="@dimen/_15sdp"
             android:textColor="@color/colorPrimary"
             android:background="@drawable/bg_deposit_fund"
             android:textSize="@dimen/_12sdp"/>-->

    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="match_parent"
            android:layout_height="@dimen/_50sdp"
            android:scaleType="fitCenter"
            android:background="@null"
            app:srcCompat="@mipmap/depositfunds"/>

</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                android:layout_width="match_parent"
                android:orientation="vertical"
                android:layout_centerInParent="true"
                android:layout_height="@dimen/_310sdp">
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@android:color/transparent"
            android:orientation="vertical">
        <androidx.cardview.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:cardCornerRadius="4dp"
                android:id="@+id/congratulation_card"
                app:cardBackgroundColor="#FAFAFA"
                app:cardElevation="0dp"
                android:layout_gravity="bottom">
            <LinearLayout
                    android:id="@+id/ll_top"
                    android:orientation="vertical"
                    android:layout_width="match_parent"
                    android:layout_marginTop="@dimen/_25sdp"
                    android:layout_height="match_parent">
                <LinearLayout
                        android:padding="@dimen/_5sdp"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center_horizontal"
                            style="@style/TextStyleNormal"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:text="Total Balance"
                            android:textColor="@color/textColorGray"
                            android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            android:layout_gravity="center_horizontal"
                            style="@style/TextStyleSemiBold"
                            android:padding="@dimen/_5sdp"
                            android:gravity="center_vertical"
                            android:textSize="@dimen/_13sdp"
                            android:layout_width="wrap_content"
                            android:text="@string/Rs20"
                            android:textColor="@color/textColorBlack"
                            android:layout_height="wrap_content"/>
                    <androidx.appcompat.widget.AppCompatButton
                            android:id="@+id/txt_Add"
                            style="@style/ButtonStyle"
                            android:textSize="@dimen/_9sdp"
                            android:background="@drawable/button_rounded_background_dialogue"
                            android:gravity="center"
                            android:visibility="gone"
                            android:textColor="@color/colorSecondary"
                            android:layout_width="wrap_content"
                            android:text="@string/add_balance"
                            android:layout_height="@dimen/_21sdp"/>

                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_marginTop="@dimen/_5sdp"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:layout_marginEnd="@dimen/_5sdp"
                      android:layout_height="0.5dp"
                      android:background="@color/GrayColorOTP"/>
                <LinearLayout
                        android:padding="@dimen/_7sdp"
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:gravity="center_horizontal"
                            android:orientation="vertical"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                        <LinearLayout
                                android:padding="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_gravity="start"
                                        style="@style/TextStyleNormal"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/_11sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/ll_account"
                                        android:layout_width="wrap_content"
                                        android:text="Winning"
                                        android:textColor="@color/textColorLightBlack"
                                        android:layout_height="wrap_content"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_gravity="start"
                                        style="@style/TextStyleMedium"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/_11sdp"
                                        android:layout_width="wrap_content"
                                        android:text="@string/Rs20"
                                        android:textColor="@color/colorSecondary"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_gravity="center" android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@mipmap/info"
                                    android:tint="@color/colorSecondary"/>
                        </LinearLayout>
                        <View android:layout_width="match_parent"
                              android:layout_height="0.5dp"
                              android:background="@color/GrayColorOTP"/>
                        <LinearLayout
                                android:padding="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="start"
                                        style="@style/TextStyleMedium"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/_11sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/ll_account"
                                        android:layout_width="wrap_content"
                                        android:text="@string/Rs20"
                                        android:textColor="@color/colorSecondary"
                                        android:layout_height="wrap_content"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_gravity="start"
                                        style="@style/TextStyleNormal"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/_11sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/ll_account"
                                        android:layout_width="wrap_content"
                                        android:text="Cash"
                                        android:textColor="@color/textColorLightBlack"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatButton
                                    android:id="@+id/txt_Withdraw"
                                    style="@style/ButtonStyle"
                                    android:textSize="@dimen/_9sdp"
                                    android:background="@drawable/button_rounded_background_dialogue"
                                    android:gravity="center"
                                    android:textColor="@color/colorSecondary"
                                    android:layout_width="wrap_content"
                                    android:layout_gravity="center"
                                    android:text="@string/add_balance"
                                    android:layout_height="@dimen/_21sdp"/>
                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_marginStart="@dimen/_5sdp"
                                    android:layout_gravity="center" android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@mipmap/info"
                                    android:tint="@color/colorSecondary"/>
                        </LinearLayout>
                        <View android:layout_width="match_parent"
                              android:layout_height="0.5dp"
                              android:background="@color/GrayColorOTP"/>
                        <LinearLayout
                                android:padding="@dimen/_5sdp"
                                android:orientation="horizontal"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                            <LinearLayout
                                    android:orientation="vertical"
                                    android:layout_width="0dp"
                                    android:layout_weight="1"
                                    android:layout_height="wrap_content">
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_marginTop="@dimen/_10sdp"
                                        android:layout_gravity="start"
                                        style="@style/TextStyleMedium"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/_11sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/ll_account"
                                        android:layout_width="wrap_content"
                                        android:text="@string/Rs20"
                                        android:textColor="@color/colorSecondary"
                                        android:layout_height="wrap_content"/>
                                <androidx.appcompat.widget.AppCompatTextView
                                        android:layout_gravity="start"
                                        style="@style/TextStyleNormal"
                                        android:gravity="center_vertical"
                                        android:textSize="@dimen/_11sdp"
                                        app:layout_constraintStart_toStartOf="parent"
                                        app:layout_constraintTop_toBottomOf="@+id/ll_account"
                                        android:layout_width="wrap_content"
                                        android:text="Bonus"
                                        android:textColor="@color/textColorLightBlack"
                                        android:layout_height="wrap_content"/>

                            </LinearLayout>
                            <androidx.appcompat.widget.AppCompatImageView
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    app:srcCompat="@mipmap/info"
                                    android:tint="@color/colorSecondary"/>
                        </LinearLayout>

                    </LinearLayout>
                </LinearLayout>
                <View android:layout_width="match_parent"
                      android:layout_marginStart="@dimen/_5sdp"
                      android:layout_marginEnd="@dimen/_5sdp"
                      android:layout_height="0.5dp"
                      android:visibility="gone"
                      android:background="@color/GrayColorOTP"/>
                <LinearLayout
                        android:background="@drawable/button_rounded_background_white_green"
                        android:layout_margin="@dimen/_5sdp"
                        android:orientation="horizontal"
                        android:visibility="gone"
                        android:layout_width="match_parent"
                        android:padding="@dimen/_5sdp"
                        android:layout_height="wrap_content">
                    <androidx.appcompat.widget.AppCompatImageView
                            android:layout_gravity="center"
                            android:src="@mipmap/rules"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>
                    <LinearLayout
                            android:paddingStart="@dimen/_5sdp"
                            android:layout_width="0dp"
                            android:orientation="vertical"
                            android:layout_weight="1" android:layout_height="wrap_content">
                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center_horizontal"
                                style="@style/TextStyleNormal"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_9sdp"
                                android:layout_width="match_parent"
                                android:text="Maximum usable cash bonus per match = 10% of Entry fee"
                                android:textColor="@color/textColorGray"
                                android:layout_height="wrap_content"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                android:layout_gravity="center_horizontal"
                                style="@style/TextStyleNormal"
                                android:paddingTop="@dimen/_1sdp"
                                android:gravity="center_vertical"
                                android:textSize="@dimen/_9sdp"
                                android:layout_width="match_parent"
                                android:text="Know More"
                                android:textColor="@color/colorSecondary"
                                android:layout_height="wrap_content"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatImageView
                            android:padding="@dimen/_5sdp"
                            android:layout_gravity="center"
                            android:src="@mipmap/close"
                            android:tint="@color/textColorGray"
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatImageView
                        android:id="@+id/img_close"
                        android:paddingTop="@dimen/_8sdp"
                        android:paddingEnd="@dimen/_15sdp"
                        android:paddingStart="@dimen/_15sdp"
                        android:paddingBottom="@dimen/_15sdp"
                        android:layout_gravity="center"
                        android:src="@mipmap/arrowdown"
                        android:rotation="180"
                        android:visibility="gone"
                        android:tint="@color/textColorGray"
                        android:layout_width="@dimen/_40sdp"
                        android:layout_height="@dimen/_30sdp"/>
                <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/white"
                        android:text="Confirm and Pay"
                        android:gravity="center"
                        style="@style/TextStyleMedium"
                        android:background="#31E15A"
                        android:padding="@dimen/_10ssp"
                        android:id="@+id/tv_yes"/>
            </LinearLayout>
        </androidx.cardview.widget.CardView>
        <LinearLayout
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:orientation="vertical"
                android:gravity="center"
                android:background="@drawable/circular_tick"
                android:layout_gravity="center_horizontal|top">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_30sdp"
                    android:layout_height="@dimen/_30sdp"
                    android:scaleType="fitCenter"
                    app:srcCompat="@mipmap/moneydollar"
                    android:background="@null"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="Wallet"
                    android:textSize="@dimen/_12sdp"
                    style="@style/TextStyleSemiBold"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:textColor="#005881"/>
        </LinearLayout>
    </FrameLayout>
    <androidx.appcompat.widget.AppCompatImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:scaleType="fitCenter"
            android:layout_marginTop="@dimen/_28sdp"
            android:layout_alignParentRight="true"
            android:id="@+id/imgbtnCancle"
            app:srcCompat="@mipmap/crossres"
            android:background="@null"/>
</RelativeLayout>

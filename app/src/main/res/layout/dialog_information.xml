<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:card_view="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_margin="@dimen/_25sdp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardCornerRadius="@dimen/_6sdp"
        card_view:cardElevation="@dimen/_3sdp">
    <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <androidx.appcompat.widget.AppCompatImageButton
                android:id="@+id/iv_info1"
                android:layout_width="@dimen/_30sdp"
                android:layout_height="@dimen/_30sdp"
                android:layout_gravity="center"
                android:background="@mipmap/info_"
                android:visibility="visible"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toTopOf="parent"
                />

        <androidx.appcompat.widget.AppCompatTextView
                android:id="@+id/tvInfo" android:layout_width="match_parent"
                android:lineSpacingExtra="@dimen/_2sdp"
                android:textColor="@color/textColorLightBlack"
                android:layout_height="wrap_content"
                style="@style/TextStyleNormal"
                android:textSize="@dimen/_12ssp"
                android:padding="@dimen/_8sdp"
                android:minLines="5"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                card_view:layout_constraintTop_toBottomOf="@+id/iv_info1"
              />

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btnOK"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_5sdp"
                card_view:layout_constraintLeft_toLeftOf="parent"
                card_view:layout_constraintRight_toRightOf="parent"
                android:background="@color/green"
                android:textColor="@color/white"
                android:text="OK"
                style="@style/TextStyleSemiBold"
                android:textSize="@dimen/_15ssp"
                card_view:layout_constraintTop_toBottomOf="@+id/tvInfo"

        />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:app="http://schemas.android.com/apk/res-auto"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="@mipmap/bg">
    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical"
                      android:layout_gravity="center"
                      android:gravity="center"
                      android:layout_margin="@dimen/_20sdp">

            <ImageView android:layout_width="@dimen/_180sdp"
                       android:layout_height="@dimen/_180sdp"
                       android:src="@mipmap/logo"/>

            <TextView
                    android:id="@+id/btn_LetsPlay"
                    android:layout_width="@dimen/_100sdp"
                    android:layout_height="@dimen/_100sdp"
                    android:background="@drawable/green_empty_round"
                    android:layout_marginTop="@dimen/_15sdp"
                    android:text="Enter"
                    android:gravity="center"
                    android:textAllCaps="true"
                    style="@style/TextStyleMedium"
                    android:textSize="@dimen/_16ssp"/>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/txt_EnterCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_empty_button"
                    android:text="@string/sign_up"
                    android:gravity="center"
                    android:textAllCaps="true"
                    android:layout_marginTop="@dimen/_15sdp"
                    style="@style/ButtonStylelogin"/>

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_12sdp"
                    android:text="Or Sign in with"
                    android:gravity="center"
                    android:textSize="@dimen/_14ssp"
                    style="@style/TextStyleNormal"/>

            <androidx.appcompat.widget.LinearLayoutCompat
                    android:id="@+id/ll_SocialLogin"
                    android:layout_marginTop="@dimen/_20sdp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_10sdp">

                <ImageView
                        android:id="@+id/facebookLoginButton"
                        style="@style/TextStyleNormal"
                        android:textColor="@color/white"
                        android:layout_width="@dimen/_50sdp"
                        android:padding="@dimen/_15sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:gravity="center"
                        android:src="@mipmap/fb"
                        android:background="@drawable/button_round_facebook"
                        android:foreground="?android:attr/selectableItemBackground"/>

                <ImageView
                        android:id="@+id/googleLoginButton"
                        style="@style/TextStyleNormal"
                        android:textColor="@color/white"
                        android:layout_width="@dimen/_50sdp"
                        android:padding="@dimen/_15sdp"
                        android:layout_height="@dimen/_50sdp"
                        android:gravity="center"
                        android:src="@mipmap/google"
                        android:layout_marginLeft="@dimen/_15sdp"
                        android:background="@drawable/button_round_google"
                        android:foreground="?android:attr/selectableItemBackground"
                />
            </androidx.appcompat.widget.LinearLayoutCompat>

            <androidx.appcompat.widget.AppCompatButton
                    android:id="@+id/txt_Login"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/green_fill_button"
                    android:text="@string/login"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:textAllCaps="true"
                    style="@style/ButtonStylelogin"/>

        </LinearLayout>
    </androidx.core.widget.NestedScrollView>
</LinearLayout>
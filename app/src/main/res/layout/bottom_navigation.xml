<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5">
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:id="@+id/ll_home"
                android:layout_marginTop="@dimen/_10sdp">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/imgBtnHome"
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/homeunselect"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/home"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/colorPrimary"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/tv_home"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:layout_marginTop="@dimen/_10sdp"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/market"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"
                    android:id="@+id/ll_market"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/market"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorLightBlack"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/tv_market"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:paddingBottom="@dimen/_2sdp">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:id="@+id/ll_lobby"
                    android:layout_width="@dimen/_55sdp"
                    android:layout_height="@dimen/_55sdp"
                    android:background="@mipmap/lobby"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/ll_contest"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/contestunselect"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/my_contest"
                    android:textSize="@dimen/_10sdp"
                    android:id="@+id/tv_contest"
                    android:textColor="@color/textColorLightBlack"
                    android:layout_marginTop="@dimen/_2sdp"/>
        </LinearLayout>
        <LinearLayout
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:orientation="vertical"
                android:layout_weight="1"
                android:gravity="center"
                android:id="@+id/ll_profile"
                android:paddingTop="@dimen/_5sdp"
                android:paddingBottom="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_10sdp">
            <androidx.appcompat.widget.AppCompatImageButton
                    android:layout_width="@dimen/_20sdp"
                    android:layout_height="@dimen/_20sdp"
                    android:layout_gravity="center"
                    app:srcCompat="@mipmap/profileunselect"
                    android:background="@null"
                    android:scaleType="fitCenter"
                    android:clickable="false"/>
            <androidx.appcompat.widget.AppCompatTextView
                    style="@style/TextStyleMedium"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/profile"
                    android:textSize="@dimen/_10sdp"
                    android:textColor="@color/textColorLightBlack"
                    android:layout_marginTop="@dimen/_2sdp"
                    android:id="@+id/tv_profile"/>
        </LinearLayout>
    </LinearLayout>
</LinearLayout>
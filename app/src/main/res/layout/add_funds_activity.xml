<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
android:orientation="vertical"
android:background="@color/white">

    <include layout="@layout/app_toolbar"/>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    android:orientation="vertical">

        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp">

            <TextView
                    style="@style/TextStyleSemiBold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_alignParentLeft="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorName"
                    android:text="Current Balance"/>

            <TextView
                    style="@style/TextStyleSemiBold"
                    android:textSize="@dimen/_12sdp"
                    android:gravity="center"
                    android:layout_alignParentRight="true"
                    android:layout_gravity="center_vertical"
                    android:layout_width="wrap_content"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/textColorName"
                    android:text="$100.0"/>
        </RelativeLayout>

        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/GrayColor"/>

        <TextView
                style="@style/TextStyleSemiBold"
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/colorItemBackgroundDarkGray"
                android:text="Add cash to your account"/>

        <TextView
                style="@style/TextStyleSemiBold"
                android:textSize="@dimen/_12sdp"
                android:layout_alignParentRight="true"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/_20sdp"
                android:textColor="@color/black"
                android:text="Amount to add"
        android:layout_marginStart="@dimen/_15sdp"/>

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_5sdp"
        android:textColor="@color/black"
        android:textSize="@dimen/_12sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"
        android:background="@null"/>


        <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="@color/black"
        android:layout_marginTop="@dimen/_5sdp"
        android:layout_marginStart="@dimen/_15sdp"
        android:layout_marginEnd="@dimen/_15sdp"/>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
        android:padding="@dimen/_10sdp"
                android:layout_marginTop="@dimen/_10sdp"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginEnd="@dimen/_15sdp"
        android:orientation="horizontal">


            <TextView
                    style="@style/TextStyleSemiBold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="$ 10"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/add_cash_light_blue_background"
                    android:layout_marginStart="@dimen/_15sdp"/>


            <TextView
                    style="@style/TextStyleSemiBold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="$ 20"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/add_cash_light_blue_background"
                    android:layout_marginStart="@dimen/_15sdp"/>
            <TextView
                    style="@style/TextStyleSemiBold"
                    android:textSize="@dimen/_12sdp"
                    android:layout_alignParentRight="true"
                    android:layout_width="0dp"
                    android:layout_weight="1"
                    android:layout_height="wrap_content"
                    android:textColor="@color/black"
                    android:text="$ 50"
                    android:gravity="center"
                    android:padding="@dimen/_10sdp"
                    android:background="@drawable/add_cash_light_blue_background"
                    android:layout_marginStart="@dimen/_15sdp"/>


        </LinearLayout>

        <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/btn_Submit"
                android:layout_marginStart="@dimen/_15sdp"
                android:layout_marginTop="@dimen/_20sdp"
                android:layout_marginEnd="@dimen/_15sdp"
                style="@style/ButtonStyle"
                android:background="@drawable/add_cash_solid_light_blue"
                android:text="@string/submit"
                android:layout_width="match_parent"
                android:layout_height="@dimen/_40sdp"/>

    </LinearLayout>


</LinearLayout>

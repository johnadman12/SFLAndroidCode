<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content">

    <androidx.cardview.widget.CardView
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:card_view="http://schemas.android.com/apk/res-auto" xmlns:tools="http://schemas.android.com/tools"
            android:id="@+id/card_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            card_view:cardCornerRadius="@dimen/_6sdp"
            card_view:cardElevation="@dimen/_3sdp"
            card_view:cardUseCompatPadding="true"
            card_view:contentPadding="-8dp"
            card_view:cardPreventCornerOverlap="false">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                <androidx.appcompat.widget.AppCompatImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:src="@mipmap/otcontest"
                        android:layout_weight="1"
                        android:layout_marginLeft="@dimen/_20sdp"/>
                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_20sdp"
                        android:layout_height="@dimen/_20sdp"
                        android:layout_gravity="center"
                        android:background="@mipmap/info_"
                        android:visibility="visible"
                        android:layout_marginRight="@dimen/_20sdp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="3"
                    android:layout_marginTop="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center">
                    <LinearLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@mipmap/circlebg"
                            android:gravity="center"
                            android:weightSum="1"
                            android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:id="@+id/entry_fee"
                                android:layout_weight=".5"
                                android:textSize="@dimen/_13sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="0dp"
                                android:text="$50"
                                android:textStyle="bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_10ssp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_height="wrap_content"
                                android:text="@string/entry_fee"/>
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_gravity="center">

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:id="@+id/tvTotalWinnings"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_18sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/colorSecondary"
                            android:layout_height="wrap_content"
                            android:text="$ 100000"
                            android:textStyle="bold"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorGray"
                            android:layout_height="wrap_content"
                            android:text="@string/total_winnings"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:gravity="center"
                        android:layout_marginRight="@dimen/_8sdp">
                    <LinearLayout
                            android:layout_width="@dimen/_80sdp"
                            android:layout_height="@dimen/_80sdp"
                            android:background="@mipmap/circlebg"
                            android:gravity="center"
                            android:weightSum="1"
                            android:orientation="vertical">
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:layout_gravity="center"
                                android:gravity="center"
                                android:textSize="@dimen/_13sdp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:layout_height="0dp"
                                android:text="$50"
                                android:id="@+id/tvTimeLeft"
                                android:layout_weight=".5"
                                android:textStyle="bold"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleNormal"
                                android:textSize="@dimen/_10ssp"
                                android:layout_width="wrap_content"
                                android:textColor="@color/white"
                                android:paddingTop="@dimen/_2sdp"
                                android:layout_height="wrap_content"
                                android:text="@string/time_left"/>
                    </LinearLayout>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_marginTop="@dimen/_10sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:id="@+id/tvSprortsLeft"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:layout_height="wrap_content"
                            android:text="8631/50000"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorGray"
                            android:layout_height="wrap_content"
                            android:text="@string/spot_left"/>

                </LinearLayout>

                <LinearLayout
                        android:layout_width="wrap_content"
                        android:orientation="vertical"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center">

                    <antonkozyriatskyi.circularprogressindicator.CircularProgressIndicator
                            android:id="@+id/circular_progress"
                            android:layout_width="@dimen/_90sdp"
                            android:layout_height="@dimen/_90sdp"
                            android:layout_gravity="center"
                            card_view:fillBackground="true"
                            card_view:progressColor="@color/light_blue_color"
                            card_view:progressCap="round"
                            android:outlineProvider="paddedBounds"
                            card_view:progressBackgroundStrokeWidth="@dimen/_8sdp"
                            card_view:textSize="@dimen/_17ssp"
                            card_view:textColor="@color/white"
                            style="@style/TextStyleSemiBold"
                            card_view:progressBackgroundColor="@color/green"
                            android:layout_marginBottom="8dp"
                            android:layout_marginTop="8dp"/>

                </LinearLayout>
                <LinearLayout android:layout_width="0dp"
                              android:layout_height="wrap_content"
                              android:layout_weight="1"
                              android:layout_gravity="center"
                              android:gravity="center"
                              android:orientation="vertical">

                    <androidx.appcompat.widget.AppCompatImageButton
                            android:id="@+id/ivStock"
                            android:layout_width="@dimen/_25sdp"
                            android:layout_height="@dimen/_25sdp"
                            android:src="@mipmap/home_icon"
                            android:background="@null"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/tvStockName"
                            android:layout_width="wrap_content"
                            android:textColor="@color/textColorLightBlack"
                            android:layout_height="wrap_content"
                            android:text="@string/nasdaq"
                            android:layout_marginTop="@dimen/_2sdp"/>
                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:padding="@dimen/_10sdp"
                    android:layout_gravity="center"
                    android:gravity="center"
                    android:background="@mipmap/bgcontest_back"
                    android:layout_marginTop="@dimen/_10sdp">


                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">
                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@mipmap/time_"
                            android:background="@null"/>

                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:textSize="@dimen/_12sdp"
                            android:id="@+id/tvTime"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="25 Feb 05:00 PM"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:layout_gravity="center"/>


                </LinearLayout>
                <LinearLayout
                        android:id="@+id/llWinners"
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="right">


                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_12sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="@string/winners"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:textSize="@dimen/_13sdp"
                            android:layout_width="wrap_content"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content"
                            android:text="350000"
                            android:id="@+id/tvWinnersTotal"
                            android:layout_marginLeft="@dimen/_5sdp"/>
                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_20sdp"
                            android:layout_height="@dimen/_20sdp"
                            android:src="@mipmap/dropdown"
                            android:background="@null"
                            android:layout_marginLeft="@dimen/_5sdp"/>


                </LinearLayout>


            </LinearLayout>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>
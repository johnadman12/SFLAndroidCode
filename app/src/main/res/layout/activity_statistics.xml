<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.setting.SettingActivity"
        android:background="@mipmap/bg"
        android:orientation="vertical">
    <include
            android:id="@+id/back"
            layout="@layout/include_back"/>
    <androidx.appcompat.widget.AppCompatTextView
            style="@style/TextStyleSemiBold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/statistics"
            android:textColor="@color/white"
            android:textSize="@dimen/_22ssp"
            android:layout_gravity="center"
            android:paddingLeft="@dimen/_12sdp"
            android:paddingRight="@dimen/_12sdp"
            android:paddingTop="@dimen/_15sdp"
            android:paddingBottom="@dimen/_15sdp"/>
    <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/colorbutton"
            android:alpha="0.2"/>

    <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="none">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:gravity="center"
                    android:layout_marginTop="@dimen/_15sdp">
                <de.hdodenhof.circleimageview.CircleImageView
                        xmlns:app="http://schemas.android.com/apk/res-auto"
                        android:id="@+id/profile_image"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        app:civ_border_width="3dp"
                        android:src="@drawable/ic_launcher"
                        app:civ_border_color="@color/colorbutton"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="@dimen/_18ssp"
                        android:text="Sara Thoms"
                        android:gravity="center"
                        android:layout_margin="@dimen/_5sdp"/>
                <LinearLayout
                        android:layout_width="@dimen/_75sdp"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_gravity="center">
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/level"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:id="@+id/tv_level"
                            android:alpha="0.9"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="PRO"
                            android:layout_weight="1"
                            android:textSize="@dimen/_10sdp"
                            android:textColor="@color/textColorGray"
                            android:layout_marginLeft="@dimen/_5sdp"
                            android:background="@drawable/ll_pro"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:paddingTop="@dimen/_1sdp"
                            android:paddingBottom="@dimen/_1sdp"
                            android:id="@+id/tv_pro"/>
                </LinearLayout>
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center"
                        android:alpha="0.9"
                        android:layout_marginTop="@dimen/_2sdp">
                    <androidx.appcompat.widget.AppCompatImageButton
                            android:layout_width="@dimen/_15sdp"
                            android:layout_height="@dimen/_15sdp"
                            app:srcCompat="@mipmap/location"
                            android:scaleType="fitCenter"
                            android:background="@null"/>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleNormal"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Sydney,Australia"
                            android:textSize="@dimen/_12sdp"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginLeft="@dimen/_5sdp"/>
                </LinearLayout>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleSemiBold"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/rewards"
                        android:textSize="@dimen/_14ssp"
                        android:textColor="@color/white"
                        android:layout_marginLeft="@dimen/_8sdp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/white"
                    android:layout_marginTop="@dimen/_5sdp"
                    android:layout_marginBottom="@dimen/_10sdp"
                    android:orientation="horizontal"
                    android:padding="@dimen/_10sdp">

                <androidx.appcompat.widget.AppCompatImageButton
                        android:layout_width="@dimen/_25sdp"
                        android:layout_height="@dimen/_25sdp"
                        app:srcCompat="@mipmap/ewards"
                        android:scaleType="fitCenter"
                        android:background="@null"/>
                <androidx.appcompat.widget.AppCompatTextView
                        style="@style/TextStyleNormal"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="@string/not_earn_any_reward"
                        android:textSize="@dimen/_12ssp"
                        android:textColor="@color/textColorLightBlack"
                        android:layout_gravity="center"
                        android:alpha="0.8"
                        android:layout_marginLeft="@dimen/_5sdp"/>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/white_circle">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/contestjoined"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contest_joined"
                            android:textSize="@dimen/_14ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/white_circle">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/contestjoined"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contest_won"
                            android:textSize="@dimen/_14ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/white_circle">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/contestjoined"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contest_joined"
                            android:textSize="@dimen/_14ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/white_circle">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/contestjoined"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contest_won"
                            android:textSize="@dimen/_14ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"/>
                </LinearLayout>
            </LinearLayout>
            <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:weightSum="2"
                    android:layout_margin="@dimen/_10sdp">
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical">
                    <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/white_circle">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/contestjoined"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contest_joined"
                            android:textSize="@dimen/_14ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"/>

                </LinearLayout>
                <LinearLayout
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:layout_gravity="center"
                        android:gravity="center"
                        android:orientation="vertical"
                        android:layout_height="wrap_content">
                    <LinearLayout
                            android:layout_width="@dimen/_100sdp"
                            android:layout_height="@dimen/_100sdp"
                            android:orientation="vertical"
                            android:layout_gravity="center"
                            android:gravity="center"
                            android:background="@drawable/white_circle">
                        <androidx.appcompat.widget.AppCompatImageButton
                                android:layout_width="@dimen/_37sdp"
                                android:layout_height="@dimen/_37sdp"
                                android:scaleType="fitCenter"
                                app:srcCompat="@mipmap/contestjoined"
                                android:layout_gravity="center"
                                android:background="@null"
                                android:clickable="false"/>
                        <androidx.appcompat.widget.AppCompatTextView
                                style="@style/TextStyleSemiBold"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="50"
                                android:textSize="@dimen/_16ssp"
                                android:textColor="@color/colorPrimary"
                                android:layout_gravity="center"
                                android:layout_marginTop="@dimen/_5sdp"/>
                    </LinearLayout>
                    <androidx.appcompat.widget.AppCompatTextView
                            style="@style/TextStyleSemiBold"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="@string/contest_won"
                            android:textSize="@dimen/_14ssp"
                            android:textAllCaps="true"
                            android:textColor="@color/white"
                            android:layout_gravity="center"
                            android:layout_marginTop="@dimen/_7sdp"/>
                </LinearLayout>
            </LinearLayout>

        </LinearLayout>
    </ScrollView>


</LinearLayout>